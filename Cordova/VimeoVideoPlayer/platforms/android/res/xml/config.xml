<?xml version='1.0' encoding='utf-8'?>
<widget id="tv.ouya.examples.cordova.videoplayer" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <preference name="websecurity" value="disable" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="OuyaSDK">
        <param name="android-package" value="tv.ouya.sdk.CordovaOuyaPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <allow-navigation href="http://*/*" />
    <name>VideoPlayer</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="http://vimeo.com" subdomains="true" />
    <access origin="https://player.vimeo.com" />
    <access origin="https://*.vimeocdn.com" subdomains="true" />
    <access origin="vimeocdn.com" subdomains="true" />
    <access origin="https://*.google-analytics.com" subdomains="true" />
    <access origin="https://*.akamaihd.net"  subdomains="true" />
    <access origin="http://tsgenigma.com"  subdomains="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
